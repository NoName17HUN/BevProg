#include "std_lib_facilities.h"

int main(){

bool TerminaterWasHit;

cout << "Give me two integer Values please!(Or you can terminate the program at anytime with the '|' (pipeline) charachter)" << endl;
string input;
cin >> input;
double LowestNumber;
double HighestNumber;
double CurrentNumber1;
double CurrentNumber2;
string Inputs[2];
Inputs[0]=input.Split()[0];
Inputs[1]=input.Split()[1];
while(!TerminaterWasHit)
{
	switch(Inputs[0])
		case '|':
		TerminaterWasHit=true;
		return 0;
		break;
		default:
		CurrentNumber1=(double)Inputs[0];
		break;
	switch(Inputs[1])
		case '|':
		TerminaterWasHit=true;
		return 0;
		break;
		default:
		CurrentNumber2=(double)Inputs[1];
		break;

if(CurrentNumber1<CurrentNumber2){
	cout << "The smaller value is: " << CurrentNumber1 << endl;
	cout << "The higher value is: " << CurrentNumber2 << endl;
	if((CurrentNumber1/CurrentNumber2)<(1/100))
	{
		cout << "These numbers are almost equal!" << endl;
	}
	}
else if(CurrentNumber1>CurrentNumber2){
	cout << "The smaller value is: " << CurrentNumber2 << endl;
	cout << "The higher value is: " << CurrentNumber1 << endl;
	if((CurrentNumber2/CurrentNumber1)<(1/100))
	{
		cout << "These numbers are almost equal!" << endl;
	}
}else if(CurrentNumber1==CurrentNumber2){
 cout << "Wow these number you have entered, are actually equal;" << endl;
}



				
}
		




return 0;
}
